{
	"name": "tachyon-drive-node-fs",
	"version": "0.9.0",
	"description": "Nodejs fs module storage driver implementation",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup src/index.ts --minify --sourcemap --format cjs,esm --dts --clean",
		"prepublishOnly": "npm run build",
		"test": "c8 mocha --inspect",
		"coverage": "c8 report --reporter=lcovonly",
		"lint": "eslint . --ext .ts",
		"validate": "tsc --noEmit --project tsconfig.test.json"
	},
	"files": [
		"dist"
	],
	"repository": "github:mharj/tachyon-drive-node-fs",
	"keywords": [
		"storage",
		"driver",
		"nodejs"
	],
	"mocha": {
		"exit": true,
		"extension": [
			"ts",
			"js"
		],
		"recursive": true,
		"enable-source-maps": true,
		"require": [
			"ts-node/register"
		],
		"loader": "ts-node/esm",
		"reporters": [
			"spec",
			"mocha-junit-reporter"
		]
	},
	"author": "mharj",
	"license": "MIT",
	"devDependencies": {
		"@stylistic/eslint-plugin": "^2.7.2",
		"@stylistic/eslint-plugin-ts": "^2.7.2",
		"@tsconfig/node18": "^18.2.4",
		"@types/chai": "^4.3.19",
		"@types/chai-as-promised": "^7.1.8",
		"@types/mocha": "^10.0.7",
		"@types/node": "^18.19.50",
		"@types/sinon": "^17.0.3",
		"@typescript-eslint/eslint-plugin": "^8.4.0",
		"@typescript-eslint/parser": "^8.4.0",
		"c8": "^10.1.2",
		"chai": "^5.1.1",
		"chai-as-promised": "^7.1.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-deprecation": "^3.0.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-sonarjs": "^0.23.0",
		"mocha": "^10.7.3",
		"prettier": "^3.3.3",
		"sinon": "^18.0.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.7.0",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"@avanio/logger-like": "^0.2.0",
		"@luolapeikko/ts-common": "^0.2.0",
		"tachyon-drive": "^0.9.0"
	}
}
